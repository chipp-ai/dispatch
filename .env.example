# Deno API Environment Variables

# Server
ENVIRONMENT=development
PORT=8000
APP_URL=http://localhost:8000

# Database (PostgreSQL)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/chipp

# Redis
REDIS_URL=redis://localhost:6379

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Sentry
SENTRY_DSN=
VERSION=development

# Twilio (for voice/WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# AI Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Cloudflare R2 (for brand sync)
# Create token at: https://dash.cloudflare.com/<account_id>/r2/api-tokens
R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
# Use chipp-deno-spa-dev for local development to avoid overwriting production
R2_BUCKET_NAME=chipp-deno-spa-dev
R2_PUBLIC_URL=https://r2.chipp.ai

# Stripe Token Billing (for LLM usage billing)
# These enable routing LLM requests through Stripe's Token Billing proxy
# for automatic usage-based billing attribution.
STRIPE_CHIPP_KEY=
STRIPE_SANDBOX_KEY=
STRIPE_CHIPP_INTERNAL_CUSTOMER_ID=
STRIPE_CHIPP_INTERNAL_SANDBOX_CUSTOMER_ID=
USE_STRIPE_SANDBOX=false
